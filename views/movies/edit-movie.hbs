<h2>Edit your Movie</h2>
<form action="/movies/create" method="POST">
  <label for="title">Title</label>
  <input type="text" name="title" value="{{movie.title}}" />
  <label for="genre">Genre</label>
  <input type="text" name="genre" value="{{movie.genre}}"/>
  <label for="plot">Plot</label>
  <input type="textarea" name="plot" value="{{movie.plot}}"/>
  <label for="case" >Cast</label>
  <select name="cast" id="cast" multiple>
    {{#each celebs}}
    <option selected = value="{{ this._id }}">{{ this.name }}</option>
    {{/each}}
  </select>
  <button type="submit">Submit changes</button>
</form>